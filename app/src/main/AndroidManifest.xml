<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gnr.esgi.taggle"
    android:versionCode="1"
    android:versionName="0.1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.gnr.esgi.taggle.Taggle"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.gnr.esgi.taggle.activitie.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gnr.esgi.taggle.activitie.DetailArticleActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name="com.gnr.esgi.taggle.service.RefreshService" />

        <activity
            android:name="com.gnr.esgi.taggle.activitie.TagActivity"
            android:label="@string/title_activity_tag" />
        <activity
            android:name="com.gnr.esgi.taggle.activitie.TagSettingsActivity"
            android:label="@string/title_activity_tag_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gnr.esgi.taggle.activitie.WebViewActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gnr.esgi.taggle.activitie.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity
            android:name="com.gnr.esgi.taggle.activitie.BookmarksActivity"
            android:label="@string/title_activity_bookmarks"/>

    </application>

</manifest>
